{% extends 'base.html.twig' %}

{% block title %}
    {% if is_granted('ROLE_USER') %}
    Company
    {% endif %}
{% endblock %}

{% block body %}
    {% if is_granted('ROLE_USER') %}
    <h1>Company</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ company.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ company.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ company.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('company_index') }}">back to list</a>

        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('company_edit', {'id': company.id}) }}">edit</a>

        {{ include('company/_delete_form.html.twig') }}
        {% endif %}
    {% endif %}
{% endblock %}
